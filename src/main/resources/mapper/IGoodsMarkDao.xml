		from
		tb_goods_mark
		<trim prefix="WHERE" prefixOverrides="AND |OR ">
			status &lt;&gt; -1
			and type_id = #{typeId}
			<if test="ifQuery!=null and ifQuery!=''">
				and ${ifQuery}
			</if>
		</trim>
	</select>

	<select id="getRowsByTypeCode" parameterType="string"
		resultType="long">
		select
		count(id)
		from
		tb_goods_mark
		where status &lt;&gt; -1
		and type_code = #{typeCode}
	</select>

	<select id="getMarkTreeListByTypeCode" parameterType="string"
		resultType="hashmap">
		select
		id,
		0 as pid,
		mark_name as text
		from
		tb_goods_mark
		where status &lt;&gt; -1
		and type_id =
		#{typeCode}
		order by ord desc
	</select>

